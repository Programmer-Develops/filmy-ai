# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True
ENVIRONMENT=development

# Video Processing
MAX_VIDEO_SIZE_MB=500
SUPPORTED_FORMATS=mp4,avi,mov,mkv,flv
TEMP_VIDEO_DIR=./data/temp_videos
OUTPUT_VIDEO_DIR=./data/output_videos

# Database
DATABASE_URL=sqlite:///./data/filmy_ai.db
# DATABASE_URL=postgresql://user:password@localhost/filmy_ai

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# AI Models
MODEL_DEVICE=cuda  # or cpu
MODEL_CACHE_DIR=./models
ENABLE_GPU=True

# Security
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY=your-api-key-here-change-in-production

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
